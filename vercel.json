{
  "version": 2,
  "builds": [
    { "src": "src/**/*.{js,ts,tsx}", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/server/(.*)", "dest": "/server/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
